//install jellyfish
sudo apt-get update
sudo apt-get install jellyfish

// divide the fasta file into kmers
$ jellyfish count -m 21 -s 100M -t 10 -C reads.fast

//get the histogram of the counted kmers
$ jellyfish histo mer_counts.jf  >> filename  
   "filename is optional if u target to save the data"

//get specific kmer
$ jellyfish query mer_counts.jf target-kmer





